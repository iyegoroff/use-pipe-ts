{
  "name": "use-pipe-ts",
  "version": "0.0.2",
  "description": "Pipe-based useCallback react hook",
  "main": "dist/umd/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preversion": "npm run build",
    "postversion": "git add . && git commit -am build || : && git push && git push --tags && npm publish",
    "build:dts": "tsc -p . -d true --emitDeclarationOnly true --removeComments false",
    "build:umd": "tsc -p . -m umd -t es5 --lib es5,es2015.collection --outDir ./dist/umd",
    "build:es6": "tsc -p .",
    "build": "rm -rf dist && mkdir dist && npm run build:dts && npm run build:umd && npm run build:es6"
  },
  "keywords": [
    "react-hook",
    "typescript"
  ],
  "files": [
    "dist",
    "src"
  ],
  "author": "iyegoroff <iegoroff@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iyegoroff/use-pipe-ts/issues"
  },
  "homepage": "https://github.com/iyegoroff/use-pipe-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iyegoroff/use-pipe-ts.git"
  },
  "devDependencies": {
    "@types/react": "^17.0.6",
    "pipe-ts": "^0.0.9",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "pipe-ts": "*",
    "react": "*"
  }
}
